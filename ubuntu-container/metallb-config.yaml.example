apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  namespace: metallb-system
  name: wulf-slurm-pool
spec:
  addresses:
  - 192.168.100.250-192.168.100.250 # Single IP
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  namespace: metallb-system
  name: wulf-slurm-advert
spec:
  ipAddressPools:
  - wulf-slurm-pool
